@model ListSourceDto
@if (Model != null) {
	<section class="section " style="margin:50px ;"> 
        <div class="row ">
            @foreach(var item in Model.Sources) {
                        <div class=" col-4   ">
                            <div class="    p-3 rounded-3" style="background: #fff; border: 1px solid transparent; box-shadow: 0 2px 5px 1px rgb(64 60 67 / 16%);">
                                <div>
                            <a asp-action="Delete" asp-controller="Source" asp-route-Id="@item.Id" onclick="return confirm('هل انت متاكد من حذف @item.Title ')">
                                    <i class='bx bx-x' style="cursor: pointer;"></i>
                            </a>
                       <a asp-action="Update" asp-controller="Source" asp-route-Id="@item.Id" asp-route-department="@Model.SourceDisplay.DeptID" asp-route-unversity="@Model.SourceDisplay.UniID" asp-route-colleges="@Model.SourceDisplay.ColID">

                                    <i class='bx bx-edit-alt' style="cursor: pointer;"></i>
                    </a>
                                </div>
                                <br>
                                <div class=" mb-3" bis_skin_checked="1" width="100%" height="90%">
                                    <embed id="previewImg" src="~/resources/@item.Url" width="100%" height="90%" />
                                </div>
                                <div>
                                    <h6>@item.Title</h6>
                                </div>
                                <div>
                                    <h6>
                                        السعر:@item.Price دينار كويتي
                                    </h6>
                                </div>
                            </div>
                        </div>
            }
                    </div>
    </section>
}