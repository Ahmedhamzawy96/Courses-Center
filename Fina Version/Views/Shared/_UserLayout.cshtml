    <link rel="stylesheet" href="~/assets2/css/style.css" />
</head>
<body>
    <header>
        <div class="header-area">
            <div class="main-header">
                <div class="header-bottom header-sticky"
                     style="background-color: #f5f5f5">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <div class="col-xl-1 col-lg-1 col-md-1 col-sm-3">
                                <div class="logo">
                                    <a href="index.html">
                                        <img src="~/assets/img/logo/logo.png" alt="" />
                                    </a>
                                </div>
                            </div>

                            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-6">
                                <!-- Main-menu -->
                                <div class="main-menu f-right d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li>
                                                @{
                                                    string LoginOut = HttpContextAccessor.HttpContext.Session.GetString("username");
                                                    var claims = User.Claims.ToList();
                                                    @if(LoginOut != null||claims.Count>0){
                                                        <a asp-action="Logout" asp-controller="Login"
                                                            class=""
                                                            style="font-size: 20px; color: red">تسجيل الخروج</a>
                                                    }else{
                                                            <a asp-action="UserLogin" asp-controller="Login"
                                                            class=""
                                                            style="font-size: 20px; color: red">تسجيل الدخول</a>
                                                    }
                                                 }
                                            </li>
                                            <li><a asp-controller="University" asp-action="Universities">الجامعات</a></li>
                                            <li><a asp-action="Index" asp-controller="Home">الصفحة الرئيسية</a></li>

                                        </ul>
                                    </nav>
                                </div>
                            </div>

                            <div class="col-xl-5 col-lg-3 col-md-3 col-sm-3 fix-card">
                                <ul class="header-right f-right d-none d-lg-block d-flex justify-content-between align-self-start">
                                    <li>
                                        @{
                                            //var user = HttpContextAccessor?.HttpContext?.User?.Claims?.FirstOrDefault()?.Value;

                                            var count = HttpContextAccessor.HttpContext.Session.GetString("ProCount");
                                            var user = HttpContextAccessor.HttpContext.Session.GetString("username");
                                        }
                                        @if (user != null)
                                        {
                                            <div class="shopping-card">

                                                <a href="/BuyingCart/Display">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </a>


                                                <span class="shoping-cart-span" id="shoping-cart-span">@count</span>

                                            </div>
                                        }

                                       
                                    </li>
                                    <li>
                                        <div class="shopping-card">

                                            <a asp-action="Profile" asp-controller="Home">
                                                <i class="fas fa-user"></i>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <main>
        @RenderBody()
    </main>
    <footer dir="rtl">
        <!-- Footer Start-->
        <div class="footer-area footer-padding">
            <div class="container">
                <div class="row d-flex justify-content-between text-right">
                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-5">
                        <div class="single-footer-caption mb-50">
