@model Courses_Center.Models.University
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    String name;
    <section class="section " style="margin:50px ;">
        <div class=" p-3 rounded-3" style="background: #fff; border: 1px solid transparent; box-shadow: 0 2px 5px 1px rgb(64 60 67 / 16%);">

            <h1 class="d-flex justify-content-center">اسم الجامعه </h1>
            <form method="post" asp-action="@ViewBag.name" enctype="multipart/form-data">
                @if (Model != null)
                {
                    name = "تعديل الجامعة";
                    @Html.Hidden("universityID",Model.Id)
                }
                else
                {
                    name = "اضافه جامعة";
                }
                <div class="row mb-3" bis_skin_checked="1">
                    <label class="col-sm-1 col-form-label"></label>
                    <div class="col-5" bis_skin_checked="1">
                        <input asp-for="Name" class="form-control" required type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <br>
                    <br>

                    <div class="col-12 d-flex justify-content-center" bis_skin_checked="1">
                        <button class="btn btn-primary" type="submit">  @name </button>
                    </div>
                </div>
            </form>
        </div>
    </section>

}

