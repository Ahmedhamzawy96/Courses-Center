@model IEnumerable<Course>

    @if(Model != null) {

    <section class="section " style="margin:50px ;">
        <div class=" p-3 rounded-3" style="background: #fff; border: 1px solid transparent; box-shadow: 0 2px 5px 1px rgb(64 60 67 / 16%);">

            <section>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">كود المادة  </th>
                            <th scope="col">اسم المادة</th>
                            <th scope="col">المستوي </th>
                            <th scope="col">الترم </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id </td>
                                <td>@item.Name </td>
                                <td>@item.Level </td>
                                <td>@item.Semester </td>
                                <td>
                                    <a asp-action="Edite" asp-controller="Course" asp-route-Id="@item.Id" >
                                        <i class='bx bx-edit-alt' style="cursor: pointer;"></i>
                                    </a> |
                                    <a asp-action="Delete" asp-controller="Course" asp-route-Id="@item.Id" onclick="return confirm('هل انت متاكد من حذف @item.Name ')">
                                        <i class='bx bx-x' style="cursor: pointer;"></i>
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </section>
        </div>

    </section>



    <div class="modal fade" id="CourseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">تعديل المادة</h5>
                </div>
                <div class="modalbody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="close()">اغلاق</button>
                    <button type="button" class="btn btn-primary">حفظ </button>
                </div>
            </div>
        </div>
    </div>

    }


