@model Courses_Center.ViewModels.SourceDto

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
@{
     <!-- slider Area Start-->
    <div class="container py-5">
      <div class="row">
        <div class="col-xl-12">
          <div class="hero-cap text-center">
            <h2>تفصيل الملخص</h2>
          </div>
        </div>
      </div>
    </div>
    <!-- slider Area End-->

    <!--================Single Product Area =================-->
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="single_product_img">
           <embed   id="previewImg" src="~/resources/@Model.Url"   width="100%" height="100%" />
          </div>
        </div>
        <div class="col-lg-8 py-3">
          <div class="single_product_text text-center">
            <h3>@Model.Title </h3>
          @*  <h5>@Model.ProfName </h5>*@
            <p>
             @Model.Description
            </p>
            <h3>السعر : @Model.Price</h3>
            <div class="add_to_cart d-inline-block py-3">
              <a
                href="#"
                class="genric-btn danger-border radius justify-content-center"
              >
                اضافة لسلة المشتريات</a
              >
            </div>
            <div class="card_area"></div>
          </div>
        </div>
      </div>
    </div>


}
