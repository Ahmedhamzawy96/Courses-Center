@model  Courses_Center.ViewModels.CollageDepts;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <!-- slider Area Start-->
    <div class="slider-area">
          <!-- Mobile Menu -->
          <div
            class="single-slider slider-height2 d-flex align-items-center"
            data-background="https://mediaaws.almasryalyoum.com/news/large/2022/05/06/1797747_0.jpg"
          >
            <div class="container">
              <div class="row">
                <div class="col-xl-12">
                  <div class="hero-cap text-center">
                    <h2> @Model.uniName </h2>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
    <div class="container-fluid py-5">
          <div class="row">
            
            <div class="col-12 col-xl-8">
              <section class="UniPref" >
                <div class="card" style="background-color:#f5f5f5 ;">
                  <div class="card-body">
                    <div class="img-sec">
                      <div class="col-12 py-2">
                        <div class="card align-items-center py-3">
                          <div class="card-body text-center py-4">
                            <img
                              class="w-75"
                              src="./assets/img/Cairo_University_Crest.png"
                              alt="University Logo"
                            />
                          </div>
                          <div class="info px-3">
                            <p>
                              جامعة القاهرة ، المعروفة أيضًا باسم الجامعة المصرية من
                              1908 إلى 1940 ، وجامعة الملك فؤاد الأول وجامعة فؤاد
                              الأول من 1940 إلى 1952 ، هي الجامعة الحكومية الأولى في
                              مصر. يقع حرمها الرئيسي في الجيزة ، مباشرة عبر النيل من
                              القاهرة.
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
              <section class="py-3">
                <div class="card" style="background-color:#f5f5f5 ;">
                  <div class="card-body">
                    <h3 class="text-center">الكليات</h3>
                    <div class="container py-0 py-md-3">
                        <div class="row d-block d-lg-none">
                          <div class="Search-Bar py-3 col">
                            <input
                              type="search"
                              class="form-control rounded"
                              placeholder="البحث"
                              aria-label="Search"
                              aria-describedby="search-addon"
                            />
                          </div>
                          <div class="col py-3">
                            <button href="#" class="genric-btn danger-border radius"
                            >بحث</button
                          >                      
                        </div>
                        </div>
                    <div class="section-cards row py-2 my-2">
                    
                    @foreach (var item in Model.collegdpts)
                {
                       <div class="col-12 py-2 col-md-4" >
                        <div class="card card-h align-items-center py-3" >
                          <i class="fa-solid fa-building-columns fa-3x"></i>
                          <div class="card-body text-center py-4">
                            <h3 class="card-title">@item.Key.Name </h3>
                            <p class="card-text"></p>
                            <a asp-controller="Collage" asp-action="CollegeDepts" asp-route-Id="@item.Key.Id" class="genric-btn danger-border radius"
                              >عرض</a
                            >
                          </div>
                        </div>
                      </div>  
                }
                   
                    
                    </div>
                  </div>
                </div>
              </section>
              <section class="py-3">
                <div class="card" style="background-color:#f5f5f5 ;">
                  <div class="card-body">
                    <h3 class="text-center">الكليات</h3>
                    <div class="section-cards row py-2 my-2"></div>
                  </div>
                </div>
              </section>
            </div>
            <div class="d-none d-xl-block col-4">
                <div class="product_sidebar">
                @foreach (var item in Model.collegdpts ){
                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list"> @item.Key.Name<i class="right fas fa-caret-down"></i> </div>
                            <div class="select_option_dropdown">
                           @foreach (var item3 in item.Value)
                           {
                                 <p><a href="#">@item3.Name</a></p>
                           }
                              
                                
                            </div>
                        </div>
                    </div>
               }
                </div>
        </div>
          </div>
    </div>

}
