@{Layout = "~/Views/Shared/_AdminLayout.cshtml";}

@{
    bool CurrentReq = Context.Request.HttpContext.Request.Path.StartsWithSegments("/admin");
    
    
    switch (CurrentReq)
    {
        case true:
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        default:
            //User layout
            Layout = "~/Views/Shared/_UserLayout.cshtml";
            break;
    }
}