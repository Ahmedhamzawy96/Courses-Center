@{
    <section class="section " style="margin:50px ;">
        <div class=" p-3 rounded-3" style="background: #fff; border: 1px solid transparent; box-shadow: 0 2px 5px 1px rgb(64 60 67 / 16%);">

            <h1 class="d-flex justify-content-center">اضافه قسم </h1>
            <form method="post" enctype="multipart/form-data">
                <div class="row mb-3" bis_skin_checked="1">
                    <label class="col-sm-1 col-form-label">الجامعه</label>
                    <div class="col-3" bis_skin_checked="1">
                        <select name="Univesity" class="form-select">
                            <option selected="">اختار الجامعه</option>
                            <option value="">جامعه المنيا</option>
                            <option value="">جامعه بني سويف</option>
                            <option value="">جامعه اسيوط</option>
                            <option value="">جامعه القاهره</option>

                        </select>
                    </div>
                    <label class="col-sm-1 col-form-label">اسم الكليه</label>
                    <div class="col-3" bis_skin_checked="1">
                        <select name="College" class="form-select">
                            <option selected="">كليه حاسبات</option>
                            <option value="">كليه هندسه</option>
                            <option value="">كليه طب </option>


                        </select>
                    </div>
                    <label class="col-sm-1 col-form-label">اسم القسم   </label>
                    <div class="col-3" bis_skin_checked="1">
                        <input name="Department" class="form-control" type="text" />
                        <span class="text-danger"></span>

                    </div>

                    <br>
                    <br>
                    <br>
                    <div class="col-12 d-flex justify-content-center" bis_skin_checked="1">
                        <button class="btn btn-primary" type="submit">  اضافه قسم </button>
                    </div>
            </form>
        </div>
    </section>

}
