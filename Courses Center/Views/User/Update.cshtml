@model Courses_Center.Models.Admin
@{
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7 col-md-7 d-flex flex-column align-items-center justify-content-center">

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">تعديل ادمن </h5>
                            </div>
                            <form class="row g-3 needs-validation" novalidate method="post" asp-controller="User" asp-action="Update">
                                
                                        <input asp-for="UserName" class="form-control" hidden>
                                     
                                    
                                <div class="col-12">
                                    <label class="form-label"> الايميل</label>
                                    <div class="input-group has-validation">
                                        <input asp-for="Email" class="form-control" required>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">الرقم السري</label>
                                    <input asp-for="Password" class="form-control" required >
                                    <span class="text-danger"></span>

                                </div>
        


                                <div class="col-12"> <button class="btn btn-primary w-100" type="submit">تعديل حساب</button></div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
